{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json",
    "outDir": "build",
    "assets": [
      {
        "include": "node_modules/swagger-ui-dist/**",
        "outDir": "build/swagger-ui"
      },
      {
        "include": "../node_modules/swagger-ui-dist/**",
        "outDir": "build/swagger-ui"
      },
      {
        "include": "../../node_modules/swagger-ui-dist/**",
        "outDir": "build/swagger-ui"
      }
    ],
    "watchAssets": true
  }
}
